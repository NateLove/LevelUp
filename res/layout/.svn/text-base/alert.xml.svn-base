<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <TextView android:layout_width="wrap_content" android:layout_margin="10dip" android:layout_height="wrap_content" android:id="@+id/alerttext"></TextView>
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal">

    	<CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/dontShowAgain" android:text="Don't Show Again"></CheckBox>
   		<Button android:layout_height="wrap_content" android:id="@+id/alertButton" android:text="Accept" android:layout_width="99dp" android:layout_marginLeft="20dip"></Button>
	</LinearLayout>
</LinearLayout>
